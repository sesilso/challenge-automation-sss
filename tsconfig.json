{
  "compilerOptions": {
	"baseUrl": ".",
	"target": "ES2020",
	"module": "CommonJS",
	"moduleResolution": "node",
	"strict": true,
	"esModuleInterop": true,
	"skipLibCheck": true,
	"forceConsistentCasingInFileNames": true,
	"outDir": "dist",
	"paths": {
		"@interfaces/*": ["interfaces/*"],
		"@data/*": ["data/*"],
		"@fixtures/*": ["fixtures/*"],
		"@utils/*": ["utils/*"],
		"@api/*": ["api/*"],
		"@pages/*": ["pages/*"]
	}
  },
  "include": ["tests", "playwright.config.ts"]
}